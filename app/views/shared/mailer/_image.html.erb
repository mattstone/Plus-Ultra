  user       = nil if !defined?(user)
  subscriber = nil if !defined?(subscriber)
  campaign   = communication.campaign
  

  url  = if campaign and communication
           if subscriber 
             image_s_url(image: image, campaign_id: campaign.id, communication_id: communication.id, subscriber_id: subscriber.id)
