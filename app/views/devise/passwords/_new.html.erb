<div id="new_password">

  <h2>Forgot your password?</h2>
  
  <% 
    resource = @user  # bit of a hack
    resource_name = "user"
  %>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= render "shared/form_results", resource: resource %>

    <div class="field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="actions">
      <%= render 'shared/ui/button', button_class: standard_button_class, id: "password_send_reset_instruction" do %>
        Send me reset password instructions
      <% end %>
    </div>
  <% end %>

</div>