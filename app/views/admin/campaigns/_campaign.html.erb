<div id="<%= dom_id(campaign) %>">
  <div class="row">
    <div class="col-3"><%= campaign.name %></div>
    <div class="col-2"><%= campaign.communication_type.humanize %></div>
    <div class="col-1"><%= campaign.tag %></div>
    <div class="col-1"><%= campaign.users.count %></div>
    <div class="col-1"><%= campaign.transactions.count %></div>
    <div class="col-3"><%= campaign.link %></div>
    <div class="col-1"><%= link_to "Edit", edit_admin_channel_campaign_path(channel, campaign), class: admin_button_class %></div>
  </div>
</div>