<div id="launch_subscribe">
  
  <%= form_with url: subscribe_to_newsletter_path, method: :post do |f| %>
    <%= render 'shared/form_results', resource: @subscriber %>
    <%= f.invisible_captcha :subscribe %>

    <%= hidden_field_tag :mailing_list_id, MailingList::newsletter.id %>
    
    <div class="form-floating mb-3">
      <input type="email" name="email" class="form-control" id="newsletter_email" placeholder="" autocomplete="email" required>
      <label for="newsletter_email">Email address</label>
    </div>
    <button class="w-100 btn btn-lg btn-success" type="submit" id="newsletter_email_button">Sign Up!</button>
    <hr class="my-4">
    <!--
    <small class="text-muted">By clicking Sign up, you agree to the terms of use.</small>
    -->
  <% end %>
</div>
